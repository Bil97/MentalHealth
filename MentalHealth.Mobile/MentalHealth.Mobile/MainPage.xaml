<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MentalHealth.Mobile.MainPage"
            Title="MentalHealth"
             xmlns:local="clr-namespace:MentalHealth.Mobile"
             xmlns:pages="clr-namespace:MentalHealth.Mobile.Pages">
    <FlyoutPage.Flyout>
        <local:MainPageFlyout x:Name="FlyoutPage" x:FieldModifier="public" />
    </FlyoutPage.Flyout>
    <FlyoutPage.ToolbarItems>
        <ToolbarItem x:Name="LearnToolBar" x:FieldModifier="public" Text="Learn" Clicked="LearnToolBar_Clicked" />
        <ToolbarItem x:Name="MyAnxietyToolBar" x:FieldModifier="public" Text="My Anxiety" Clicked="MyAnxietyToolBar_Clicked" />
        <ToolbarItem x:Name="QuickTipsToolBar" x:FieldModifier="public" Text="Quick Tips" Clicked="QuickTipsToolBar_Clicked" />
        <ToolbarItem x:Name="LoginToolBar" x:FieldModifier="public" Text="Login" Clicked="LoginToolBar_Clicked" />
        <!--<ToolbarItem x:Name="AboutToolBar" x:FieldModifier="public" Text="About" Clicked="AboutToolBar_Clicked" />-->
    </FlyoutPage.ToolbarItems>

    <FlyoutPage.Detail>
        <NavigationPage x:Name="MainNavPage" x:FieldModifier="public">
            <x:Arguments>
                <pages:HomePage />
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
</FlyoutPage>