<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Add Health Record"
             x:Class="MentalHealth.Mobile.Pages.AddHealthRecord">
    <ContentPage.Content>
        <StackLayout>
            <Editor x:Name="ReportEntry" HeightRequest="200" HorizontalOptions="FillAndExpand" TextChanged="ReportEntry_TextChanged"/>
            <Button x:Name="SendButton" Text="Send" VerticalOptions="Center" HorizontalOptions="End" IsEnabled="False" Clicked="SendButton_Clicked"/>
            <Label x:Name="StateLabel" FontSize="Large" HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>